<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Weather Application</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
        integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700;900&display=swap');
    </style>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Roboto', sans-serif;
        }

        body {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: lightskyblue;
        }

        .box {
            max-width: 300px;
            min-width: 300px;
            width: 25%;
            height: 400px;
            border-radius: 5px;
            box-shadow: 6px 6px 27px 1px rgba(0, 0, 0, 0.75);
            -webkit-box-shadow: 6px 6px 27px 1px rgba(0, 0, 0, 0.75);
            -moz-box-shadow: 6px 6px 27px 1px rgba(0, 0, 0, 0.75);
        }

        .weathercon {
            height: 50%;
            border-radius: 5px;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: lightblue;
            border-bottom-left-radius: 0px;
            border-bottom-right-radius: 0px;
        }

        .weathercon {
            display: flex;
            flex-direction: column;
            justify-content: space-evenly;
        }

        .weathercon .flower {
            font-size: 4rem;
            animation: Sun-Flower 3s linear infinite;
            transition: all ease-out;
        }

        .info {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: space-around;
            background-color: paleturquoise;
            height: calc(100% - 50%);
            border-bottom-left-radius: 5px;
            border-bottom-right-radius: 5px;
        }

        .location i {
            color: white;
        }

        #country-name {
            padding-left: 0.3em;
            font-size: 1rem;
        }

        @keyframes Sun-Flower {
            0% {
                transform: scale(1.0);
                transition: all ease-in-out;
            }

            80% {
                transform: scale(1.2);
                transition: all ease-out;
            }

            100% {
                transform: scale(1.0);
                transition: all ease-in-out;
            }
        }
        .form{
            display: flex;
            flex-direction: column;
        }
        .form input {
            max-width: 300px;
            min-width: 300px;
            width: 25%;
            margin: 10px 0px;
            padding: 7px 15px;
            border-radius: 15px;
            border: none;
            outline: none;
            border-radius: 5px;
            box-shadow: 6px 6px 27px 1px rgba(0, 0, 0, 0.75);
            -webkit-box-shadow: 6px 6px 27px 1px rgba(0, 0, 0, 0.75);
            -moz-box-shadow: 6px 6px 27px 1px rgba(0, 0, 0, 0.75);
        }
        .submit-btn{
            margin: 10px 0px;
            background-color: lightblue;
            padding: 5px 0;
            border-radius: 5px;
            border: none;
        }
    </style>

    <link rel="stylesheet" href="./style.css">
</head>

<body>
    <form class="form" method="POST" action="/submit">
        <input class="field" type="text" id="inputField" name="inputField">
        <button class="submit-btn" type="submit">Submit</button>
    </form>
    <div class="box">
        <div class="weathercon">
            {{!-- <i class="fa-solid fa-sun flower" style="color: #eccc68;"></i> --}}
            <img class="flower" src={{WeatherImg}} alt="">
            <h2 style="font-size: 0.8rem;">{{WeatherCondition}}</h2>
        </div>
        <div class="info">
            <h2 class="location"><i class="fa-solid fa-street-view"></i><span
                    id="country-name">{{MyCity}},{{MyCountry}}</span>
            </h2>
            <p class="date"></p>
            <h1 class="temp">{{MyTemp}}Â°C</h1>
            <h3 class="tempmin_max">Lat {{MyLatitude}} | Lon {{MyLongitude}}</h3>
        </div>
    </div>
    <script>
        let htmlDate = document.querySelector('.date');
        let weathercon = document.getElementsByClassName('weathercon');
        const tempStatus = 'Clouds';

        const GetDate = () => {
            const Days = ['Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat'];
            const months = [
                "Jan",
                "Feb",
                "Mar",
                "Apr",
                "May",
                "Jun",
                "Jul",
                "Aug",
                "Sep",
                "Oct",
                "Nov",
                "Dec"
            ]


            const getDate = new Date();
            const Day = Days[getDate.getDay()];
            const Month_Date = `${months[getDate.getMonth()]} ${getDate.getDate()}`;
            const Current_Time = `${getDate.getHours()}:${getDate.getMinutes() == 0 ? '00' : getDate.getMinutes()}`;
            htmlDate.innerHTML = `${Day} | ${Month_Date} | ${Current_Time}`;
        }
        GetDate();
        setInterval(GetDate, 1000);
    </script>
    <script src="./script.js"></script>
</body>

</html>